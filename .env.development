# Development Environment Variables (for testing)
NODE_ENV=development
PORT=4022

# Database (MongoDB not required for initial testing)
MONGODB_URI=mongodb://localhost:27017/ebanking

# JWT Secrets (development only - change in production)
JWT_SECRET=development-secret-key-change-in-production-ebanking-2025
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=development-refresh-secret-change-in-production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (will simulate emails if not configured)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# SMS Configuration (will simulate SMS if not configured)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client URL
CLIENT_URL=http://localhost:8081
